---
import Footer from "../components/Footer.astro";
import flor from "../fotos/flor.png";
---

<div class="topnav">
    <img class="flor" src={flor.src} alt="" />
    <button onclick="mostrarMenu()" class="boton"
        ><i class="fa-solid fa-bars text-2xl"></i></button
    >
    <div class="menumovil">
        <a class="opcionmenu1" href="/">HOME</a>
        <a class="opcionmenu1" href="/tienda">TIENDA</a>
        <a class="opcionmenu1" href="/carrito">CARRITO</a>
        <a class="opcionmenu1" href="/contacto">CONTACTO</a>
        <div class="footer">
            <Footer />
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .footer {
        position: absolute;
        bottom: 0.5%;
    }

    .flor {
        padding: 4%;
    }
    .boton {
        padding-left: 4%;
        padding-right: 4%;
        color: white;
    }
    .menumovil {
        height: 88vh;
        width: 100vw;
        display: none;
        flex-direction: column;
        justify-content: center;
        position: absolute;
        z-index: 3;
        top: 8%;
        background-color: rgba(0, 0, 0, 0.733);
    }
    .topnav {
        overflow: hidden;
        background-color: black;
        height: 8vh;
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
    .topnav a {
        float: left;
        color: white;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        display: flex;
        justify-content: center;
    }
    .topnav a:hover,
    .boton:hover {
        color: rgb(223, 223, 223);
    }

    .opcionmenu1 {
        margin-bottom: 10%;
        padding: 0;
    }

    @media (min-width: 1024px) {
        .menumovil {
            top: 0%;
            height: 100%;
            width: 100vw;
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            position: relative;
            background-color: transparent;
        }
        .footer {
            position: absolute;
            right: 0%;
            padding-right: 1.3%;
            height: 100%;
            display: flex;
            align-items: center;
        }
        .flor {
            display: none;
        }
        .topnav a:hover {
            background-color: #123;
        }
        .boton {
            display: none;
        }
        .opcionmenu1 {
            margin-bottom: 0;
            padding-left: 1.3%;
            padding-right: 1.3%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }
</style>

<script>
    const buttons = document.querySelectorAll(".boton");

    buttons.forEach((button) => {
        button.addEventListener("click", () => {
            const menumovil = document.querySelector(
                ".menumovil",
            ) as HTMLElement;
            menumovil.style.display =
                menumovil.style.display === "none" ||
                menumovil.style.display === ""
                    ? "flex"
                    : "none";
        });
    });
</script>
